pipeline {
    agent any

    environment {
        AWS_REGION   = "us-east-1"
        ECR_REGISTRY = "122610499688.dkr.ecr.us-east-1.amazonaws.com"
        ECR_REPO     = "tasky"
        IMAGE_TAG    = "latest"
        CLUSTER_NAME = "tasky-wiz-eks"
        K8S_MANIFEST = "k8s/tasky.yaml"
        TRIVY_CACHE  = "/var/lib/jenkins/trivy-cache"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/CSYREPO/CSYTASKY.git'
            }
        }

        stage('IaC Scan (Checkov)') {
            steps {
                sh """
                  # start clean so old directories/files don't conflict
                  rm -rf checkov-report
                  mkdir -p checkov-report

                  # run checkov in the repo root (/workspace) so it doesn't complain
                  docker run --rm \\
                    -v \$PWD:/workspace \\
                    -w /workspace \\
                    bridgecrew/checkov:latest \\
                    --directory /workspace \\
                    --output cli \\
                    --soft-fail | tee checkov-report/checkov-cli.txt

                  # make a console-friendly version (strip weird chars)
                  cat checkov-report/checkov-cli.txt | tr -cd '\\11\\12\\15\\40-\\176' > checkov-report/checkov-cli-clean.txt

                  echo "===== CHECKOV REPORT (clean) ====="
                  cat checkov-report/checkov-cli-clean.txt
                """
            }
        }

        stage('Build Docker image') {
            steps {
                sh """
                  docker build -t tasky:latest .
                  docker tag tasky:latest ${ECR_REGISTRY}/${ECR_REPO}:${IMAGE_TAG}
                """
            }
        }

        stage('Trivy Scan (non-blocking)') {
            steps {
                sh """
                  mkdir -p ${TRIVY_CACHE}
                  rm -rf trivy-report
                  mkdir -p trivy-report

                  docker run --rm \\
                    -v ${TRIVY_CACHE}:/root/.cache/ \\
                    -v /var/run/docker.sock:/var/run/docker.sock \\
                    -v \$PWD:/report \\
                    aquasec/trivy:latest image \\
                    --severity HIGH,CRITICAL \\
                    --ignore-unfixed \\
                    --format table \\
                    --output /report/trivy-report/trivy-report-raw.txt \\
                    --exit-code 0 \\
                    --no-progress \\
                    ${ECR_REGISTRY}/${ECR_REPO}:${IMAGE_TAG}

                  cat trivy-report/trivy-report-raw.txt | tr -cd '\\11\\12\\15\\40-\\176' > trivy-report/trivy-report.txt

                  echo "===== TRIVY REPORT (clean) ====="
                  cat trivy-report/trivy-report.txt
                """
            }
        }

        stage('Login to ECR & Push') {
            steps {
                sh """
                  aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${ECR_REGISTRY}
                  docker push ${ECR_REGISTRY}/${ECR_REPO}:${IMAGE_TAG}
                """
            }
        }

        stage('Deploy to EKS') {
            steps {
                sh """
                  aws eks update-kubeconfig --region ${AWS_REGION} --name ${CLUSTER_NAME}
                  kubectl apply -f ${K8S_MANIFEST}
                  kubectl get pods -n tasky
                  kubectl get svc -n tasky
                """
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'checkov-report/*.txt,trivy-report/*.txt', allowEmptyArchive: true
            sh 'docker image ls | grep tasky || true'
        }
    }
}

